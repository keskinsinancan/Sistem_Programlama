@model SysProgAnket3.Models.Ders_Detaylari

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Düzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ders Detayları</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ders_kodu)

        <div class="form-group">
            Ders Adı
            <div class="col-md-10">
                @Html.EditorFor(model => model.ders_adi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ders_adi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Teori
            <div class="col-md-10">
                @Html.EditorFor(model => model.teori, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.teori, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Pratik
            <div class="col-md-10">
                @Html.EditorFor(model => model.pratik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pratik, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Labratuvar
            <div class="col-md-10">
                @Html.EditorFor(model => model.lab, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lab, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Toplam Kredi
            <div class="col-md-10">
                @Html.EditorFor(model => model.toplam_kredi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.toplam_kredi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Açan Bölüm Kodu
            <div class="col-md-10">
                @Html.DropDownList("acan_bolum_kodu", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.acan_bolum_kodu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye Geri Dön", "Index")
</div>
