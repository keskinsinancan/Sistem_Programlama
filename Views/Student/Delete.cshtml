@model SysProgAnket3.Models.Ogrenciler

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Öğrenci Detayları</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.adi)
        </dd>

        <dt>
            Soyadı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.soyadi)
        </dd>

        <dt>
            Bölümü
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Bolumler.bolum_adi)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Listeye Dön", "Index")
        </div>
    }
</div>
