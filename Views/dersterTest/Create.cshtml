@model SysProgAnket3.Models.Dersler

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Grup Açma</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Ders Seçiniz
            <div class="col-md-10">
                @Html.DropDownList("ders_kodu", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ders_kodu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Grup No Giriniz
            <div class="col-md-10">
                @Html.EditorFor(model => model.grup_no, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.grup_no, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Hoca Seçiniz
            <div class="col-md-10">
                @Html.DropDownList("hoca_kodu", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.hoca_kodu, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.dersin_adi)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
